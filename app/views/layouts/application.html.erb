<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | DreamPC</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header'%>
    <div id='container'>
      <div id='content'>
        <p class="notice"><%= flash[:notice] %></p>
    <%= yield %>
  </div>
  <div id='first column'>
    <div class="loginbox">
      
      <% if user_signed_in? %>
      
      <div>Signed in as.. <%= current_user.email %>(<%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>)</div> 
      <%= link_to 'Edit Profile', edit_user_registration_path %>
      <% else %>
      
      <%= link_to 'Become a Member', new_user_registration_path %> or <%= link_to 'Sign In', new_user_session_path %>
      
      <%end%>
      
      <h2 class="BoxHeaders">Login here...</h2>
      </div>
    </div>
    <div id='searchbox'>
      <h2 class="BoxHeaders">
      <%= link_to 'New Category', new_category_path %>
      </h2>
      </div>
    </div>
    <%= render 'layouts/footer'%>
  </body>
</html>
